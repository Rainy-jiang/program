/* pages/recharge/recharge.wxss */
.blanse{
  width: 100%;
  height: 320rpx;
  background: #2b323b;
  border-radius: 20rpx;
  margin-top: 50rpx;
}
.blanse-my{
  color: #75808d;
  padding-top: 60rpx;
  padding-left: 50rpx;
  font-size: 45rpx;
}
.money{
  color: #fff;
  margin: 20rpx 50rpx 0rpx;
  font-size: 110rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1px solid #434e5c;
}
input{
  height: 100rpx;
  padding-top: 20rpx;
}
.next{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 140rpx;
  background: #2b323b;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.background{
  z-index: 10;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  background: rgba(0, 0, 0, 0.6);
}
.payment{
  width: 100%;
  height: 800rpx;
  background: #2d353f;
  position: fixed;
  bottom: 0px;
  padding: 0rpx 30rpx;
}
.delete{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 35rpx;
  right: 50px;
}
.confirm{
  color: #75808d;
  margin-top: 90rpx;
  font-size: 45rpx;
}
.moneys{
  color: #fff;
  font-size: 140rpx;
}
.message{
  height: 160rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1px solid #333c47;
}
.chongzhi{
  color: #636c77;
  padding-right: 70rpx;
}
.yanzheng{
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #545f6c;
}
.zhiwen{
  width: 77rpx;
  height: 77rpx;
  margin-right: 5rpx;
}
.mima{
  color: #fb6894;
}