/* pages/comment/comment.wxss */
.pinglun{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.icon-pinglun1{
  color: #fff;
  font-size: 50rpx;
}
.comment-message{
  width: 100%;
  padding-bottom: 40rpx;
}
.comment-user{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user-pick{
  width: 60rpx;
  height: 60rpx;
}
.nickname{
  color: #fff;
  font-size: 28rpx;
  padding-left: 25rpx;
}
.comment-content{
  margin: 0rpx 20rpx 0rpx 88rpx;
  color: #8188a5;
  font-size: 26rpx;
  border-bottom: 1px solid #343946;
}
.comment-item{
  display: flex;
  justify-content: space-between;
  padding: 35rpx 0rpx;
  align-items: center;
}
.number{
  width: 190rpx;
  display: flex;
  justify-content: space-between;
  padding-bottom: 17rpx;
}
.comicon{
  font-size: 24rpx;
  padding-right: 15rpx;
}