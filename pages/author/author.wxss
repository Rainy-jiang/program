/* pages/author/author.wxss */
.wrapper{
  padding-top: 20rpx;
}
.ranking{
  padding: 40rpx 0rpx 30rpx;
  width: 600rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.author{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.second{
  position: relative;
}
.huangguan2{
  width: 60rpx;
  height: 45rpx;
  position: absolute;
  top: -30rpx;
  left: 50rpx;
}
.huangguan1{
  width: 100rpx;
  height: 76rpx;
  position: absolute;
  top: -60rpx;
  left: 50rpx;
}
.pick1{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.pick{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.num{
  width: 33rpx;
  height: 33rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 1px solid #fff;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 30rpx;
}
.one{
  background: #fdaf01;
  position: absolute;
  bottom: -9rpx;
  left: 80rpx;
}
.two{
  background: #f44380;
  position: absolute;
  bottom: -9rpx;
  left: 62rpx;
}
.three{
  background: #00a2ff;
  position: absolute;
  bottom: -9rpx;
  left: 64rpx;
}
.nickname{
  color: #f44380;
  padding-top: 15rpx;
  padding-bottom: 10rpx;
  font-size: 35rpx;
}
.first{
  color: #fdaf01;
}
.third{
  color: #00a2ff;
}
.fans{
  color: #a2a8ba;
}
.hot-author{
  width: 100%;
  margin-left: 40rpx;
  border-top: 1px solid #343946;
  margin-bottom: 30rpx;
}
.hot-title{
  width: 600rpx;
  height: 128rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}
.seeall{
  color: #a2a8ba;
  font-size: 24rpx;
}
.author{
  width: 100%;
}
.swiper{
  width: 100%;
  color: #fff;
}
.author-list{
  width: 120rpx;
  height: 245rpx;
}
.author-pick{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.pay{
  width: 120rpx;
  height: 44rpx;
  background: #478ce0;
  font-size: 24rpx;
  text-align: center;
  line-height: 44rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.active{
  background: none;
  border: 1px solid #545d66;
}