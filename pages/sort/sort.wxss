/* pages/sort/sort.wxss */

.search {
  color: #9da3b4;
  width: 650rpx;
  height: 96rpx;
  border-radius: 50rpx;
  background: #2d353d;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 45rpx;
  margin-bottom: 30rpx;
  padding: 0rpx 30rpx;
}

.searcheng {
  margin-top: 10rpx;
  margin-left: 20rpx;
  width: 100%;
  background: #2d353d;
}

.sort {
  width: 100%;
}
swiper{
  height: 100rpx;
}
.sort-list {
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #2d353d;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.sort-content {
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  width: 130rpx;
  color: #545f6c;
}
.active{
  color: #fff;
  border-bottom: 1px solid #fb6894;
}
.shelves{
  width: 100%;
  height: 170rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}
.seeall{
  color: #8e94a4;
  font-size: 24rpx;
}
.shelves-list{
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: #fff;
  padding-bottom: 80rpx;
  border-bottom:1px solid #2c3139;
}
.pick{
  width: 192rpx;
  height: 296rpx;
  margin-bottom: 25rpx;
}
.nickname{
  color: #5d637c;
  font-size: 24rpx;
  margin-top: 6rpx;     
}
